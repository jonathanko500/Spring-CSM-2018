import java.util.Scanner;
//object for Registration
//project 2
public class Course 
{//start class
	private String className;
	private int max;
	private student[] roster = new student[max];
	//constructors
	public Course()
	{
		className="";
		max=0;
	}
	public Course(String name,int numb)
	{
		className=name;
		max=numb;
	}
	//setter
	public void setClassName(String name)
	{
		className=name;
	}
	public void setMax(int numb)
	{
		//check for valid data
		Scanner input = new Scanner(System.in);
		if(numb>0)
		{
			max=numb;
		}
		else
		{
			while(numb<=0)
			{
				System.out.print("Enter valid number: ");
				numb=Integer.parseInt(input.nextLine());
			}
			max=numb;
		}
		
	}
	//getter
	public String getClassName()
	{
		return className;
	}
	public int getMax()
	{
		return max;
	}
	public student[] getRoster()
	{
		return roster;
	}
	//toString
	public String toString()
	
	{
		String x;
		int y=0;//counter for enrolled students
		for(int i=0;i<roster.length;i++)
		{//numb of enrolled students
			if(roster[i]==null)
			{
				y++;
			}
		}
		x="Class is called "+className+", there are "+y+" students enrolled, "+max+" is the max number of students this class will take "+"\n";
		x+="The enrolled students are named:\n";
		for(int i=0;i<roster.length;i++)
		{//prints enrolled students
			if(roster[i]!=null)
			{
				x+=roster[i]+"\n";
			}
		}
		return x;
	}
	//other methods
	public boolean addStudent(student kid) 
	{
		boolean add = false;
		for(int i=0;i<roster.length;i++)
		{//looks through roster
			if(kid.getTuition()==true)
			{//tuition paid or not
				if(roster[i]==null)
				{
					add=true;
				}
			}
			else
			{
				
				add=false;
			}
		}
		return add;
	}
	public boolean dropStudent(student kid)
	{
		boolean drop=true;
		String x=kid.getFirst()+" "+kid.getLast();
		for(int i=0;i<roster.length;i++)
		{//start loop
			if(roster[i].equals(x))
			{//check for name in roster
				roster[i]=null;
			}
			else
			{
				drop=false;
			}
		}
		return drop;
	}
	public void add (boolean able,student kid)
	{
		int x=0;
		if(able==true)
		{//check if able to add to roster
			for(int i=0;i<roster.length;i++)
			{//looks for the avaliable space
				roster[i]=kid;
				x++;
				System.out.println(x);
			}
		}
		else
		{
			System.out.println("Student is unable to be added to class.");
		}
	}
}//end class
