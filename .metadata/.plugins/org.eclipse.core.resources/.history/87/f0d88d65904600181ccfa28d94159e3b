import java.io.*;
import java.util.*;

public class Hangman {
	private static String Word;
	private static String blank;
	public static void main(String[] args) 
	{
		
		ArrayList<String> word = new ArrayList<String>();
		Word = getWord(word);
		blank=blankWord(getWord(word));
		hang();
	}
	public static String getWord(ArrayList list) 
	{//start method
		Scanner fileScan = null;
		String x;
		try
		{
			fileScan = new Scanner(new FileReader(new File("words.txt")));
		} 
		catch (FileNotFoundException e)
		{
			e.printStackTrace();
			System.out.println("There is not file.");
		}
		finally
		{
			String word;
			while(fileScan.hasNext())
			{
				word=fileScan.nextLine();
				list.add(word);
			}
		}
		int z;
		Random rand = new Random();
		z=rand.nextInt(list.size());
		return (String) list.get(z);
	}//end method
	public static String blankWord(String word)
	{
		int length=word.length();
		String x = "";
		for(int i=0;i<length;i++)
		{
			x+="*";
		}
		return x;
	}
	public static void hang()
	{//start 
		Scanner input = new Scanner(System.in);
		String guess;
		int count=1;
		System.out.println(Word);
		System.out.println("This is your word: "+blank);
		System.out.println("You have 7 tries to guess th word.");
		while(count<8)
		{
			System.out.println("This is guess number "+count);
			System.out.print("What is your guess: ");
			guess=input.nextLine();
			System.out.println(guesses(guess));
			System.out.print("What is your guess: ");
			guess=input.nextLine();
			count++;
		}
	}//end
	public static String guesses(String guess)
	{//start 
		guess.toLowerCase();
		String noBlank="";
		for(int i=0;i<Word.length();i++)
		{
			if(blank.charAt(i)==guess.charAt(0))
			{//letter in word
				noBlank+=guess.charAt(0);
			}
			/*
			else if(blank.charAt(i)!='*')
			{//blank already has the letter in spaces
				noBlank+=word.charAt(i);
			}
			*/
			else
			{
				noBlank+="*";
			}
		}
		return noBlank;
	}//end
}
