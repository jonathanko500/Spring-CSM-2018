import java.util.Random;

public class M2Test
{
	public static void main(String[] args)
	{//start main
		int[] EX= new int[]{1,2,3,4,5};
		int[] newArr = new int[EX.length];
		newArr=calculateAverage(EX);
		for(int i = 0;i<EX.length;i++)
		{
			System.out.println(newArr[i]);
		}
	}//end main
	public static int[] calculateAverage(int[] originalArray)
	{//start method
		int start=originalArray.length;
		int[] reverse = new int[originalArray.length];
		for(int i =0;i<originalArray.length;i++)
		{
			reverse[i]=originalArray[start];
			start--;
		}
		return reverse;
	}//end method
}
