import java.util.Arrays;
//project 3
public class Quadrilateral extends PolyShape
{//start class
	private int[] limit=new int[4];
	private int limitSide=4;
	public Quadrilateral () {
		super ();
	}
	public Quadrilateral (int []sideLength) {
		super (sideLength);
		
	}
	@Override
	public int getNumSides() {
		return limitSide;
	}
	@Override
	public int[] getSideLengths() {
		return Arrays.copyOf(getSideLengths(), limit.length);
	}
	@Override
	public String toString () {
		String x = "I am a shape with " + limitSide + " sides of length: ";
		for(int length : limit) 
			x += length + " ";
		x+= "\nI am a polygon. I am also a Quadrilateral";
		return x;
	}
}//end class