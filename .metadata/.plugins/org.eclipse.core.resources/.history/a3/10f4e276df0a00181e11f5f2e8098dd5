import java.util.Scanner;

//Jonathan Ko
//CIS 255 Project 1 Rainfall
//worked with Kennedy Louie
public class Rainfall
{//start class
	public static void main(String[] args)
	{//start method
		double[] Values = new double[12];
		String option;
		enter(Values);
		option=menu();
	}//end method
	public static void enter (double[] list)
	{//start method
		double value;
		Scanner input = new Scanner(System.in);
		for(int i= 0;i<list.length;i++)
		{//start for
			System.out.print("Enter value: ");
			value=Double.parseDouble(input.nextLine());
			while(value<0)
			{
				System.out.print("invalid data. Enter value more than 0: ");
				value=Double.parseDouble(input.nextLine());
			}
			list[i]=value;
		}//end for
	}//end method
	public static void printVal (double[] list)
	{//start method
		for(int i=0;i<list.length;i++)
		{
			System.out.println(list[i]);
		}
	}//end method
	public static String menu()
	{
		String choice="";
		Scanner input = new Scanner(System.in);
		System.out.println("Type \"all\" to see all the data. ");
		System.out.println("Type \"total\" for total rainfall for the year.");
		System.out.println("Type \"Avg\" for average rainfall.");
		System.out.println("Type \"Max\" to see the month with the most rain.");
		System.out.println("Type \"Min\" to see the month with the least rain.");
		System.out.println("Type \"Up\" to update data.");
		System.out.print("What would you like to do? Enter: ");
		choice=input.nextLine();
		choice.toLowerCase();
		return choice;
	}
}//end class